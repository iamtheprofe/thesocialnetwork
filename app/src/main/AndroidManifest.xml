<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".App"
        android:theme="@style/Theme.TheSocialNetwork"
        tools:targetApi="31">

        <activity
            android:name=".authentication.login.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".authentication.signup.SignUpActivity" />
        <activity android:name=".authentication.forgotPassword.ForgotPasswordActivity" />
        <activity android:name=".resetPassword.ResetPasswordActivity" />
        <activity android:name=".feed.FeedActivity" />
    </application>

</manifest>