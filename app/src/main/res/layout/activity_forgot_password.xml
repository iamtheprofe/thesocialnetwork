<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageForgot"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/space_medium"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_forgot_password_illustration"
        app:layout_constraintBottom_toTopOf="@id/forgotPassword"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutAnimation="@anim/loading_in"
        android:visibility="invisible"
        app:lottie_autoPlay="false"
        app:lottie_loop="true" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_large"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/submit"
            style="@style/TheSocialNetwork.Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:text="@string/feat_forgot_button"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toBottomOf="parent" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputRecovery"
            style="@style/TheSocialNetwork.Widget.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_x2large"
            android:hint="@string/feat_forgot_recovery"
            app:endIconMode="clear_text"
            app:layout_constraintBottom_toTopOf="@id/submit"
            app:startIconDrawable="@drawable/ic_email">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/TheSocialNetwork.Widget.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textIntroduction"
            style="@style/TheSocialNetwork.TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_x2large"
            android:text="@string/feat_forgot_introduction"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toTopOf="@id/textInputRecovery"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/TheSocialNetwork.TextStyle.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_medium"
            android:text="@string/feat_forgot_title"
            android:textSize="@dimen/text_size_extraBig"
            app:layout_constraintBottom_toTopOf="@id/textIntroduction"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>