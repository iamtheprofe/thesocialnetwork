<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TheSocialNetwork" />

    <style name="TheSocialNetwork.TextStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="fontFamily">@font/red_hat_display_regular</item>
    </style>


    <style name="TheSocialNetwork.TextStyle.Title">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TheSocialNetwork.TextStyle.Link">
        <item name="android:textColor">@color/textLink</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TheSocialNetwork.TextStyle.ForgotPassword">
        <item name="android:textSize">@dimen/text_size_forgot_password</item>
    </style>

    <style name="TheSocialNetwork.TextStyle.TextEmailStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="fontFamily">@font/redhatdisplayregular</item>

    </style>

    <style name="TheSocialNetwork.ButtonEmailStyle">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/redhatdisplayregular</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextAppearance">@style/TheSocialNetwork.TextStyle.TextEmailStyle</item>
        <item name="hintTextColor">@color/text_hint_email</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/color_accent_activated</item>
        <item name="colorControlHighlight">@color/color_accent_activated</item>
        <item name="hintEnabled">true</item>
        <item name="android:textColor">@color/black</item>

    </style>

</resources>